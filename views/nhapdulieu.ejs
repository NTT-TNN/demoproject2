<!-- form nhap du lieu -->
    <div id="content">
        <form action="/users/nhapdulieu" method="post" class="form">
            <h1>Nhập dữ liệu</h1>
            <div class="row row1">
                <div class="col-md-5 col-md-offset-1 div1">
                    <!-- email -->
                    <div class="form-group row">
                        <label for="example-email-input" class="col-form-label">Email</label>
                        <div>
                            <input class="form-control" type="email" name="email" required >
                        </div>
                    </div>
                    <!-- giang vien -->
                    <div class="form-group row">
                        <label for="example-text-input" class="col-form-label">Giảng viên</label>
                        <div>
                            <input class="form-control" type="text" name="giang_vien" required>
                        </div>
                    </div>
                    <!-- dien thoai -->
                    <div class="form-group row">
                        <label for="example-text-input" class="col-form-label">Điện thoại</label>
                        <div>
                            <input class="form-control" type="text" name="dien_thoai" required>
                        </div>
                    </div>
                    <!-- ten lop -->
                    <div class="form-group row">
                        <label for="example-text-input" class="col-form-label">Tên lớp</label>
                        <div>
                            <input class="form-control" type="text" name="ten_lop" required>
                        </div>
                    </div>
                    <!-- ma lop -->
                    <div class="form-group row">
                        <label for="example-text-input" class="col-form-label">Mã lớp</label>
                        <div>
                            <input class="form-control" type="text" name="ma_lop" required>
                        </div>
                    </div>
                </div>
                <div class="col-md-5 col-md-ofset-1 div2">
                    <!-- ma lop hoc -->
                    <div class="form-group row">
                        <label for="example-text-input" class="col-form-label">Mã lớp học</label>
                        <div>
                            <input class="form-control" type="text" name="ma_lop_hoc" required>
                        </div>
                    </div>
                    <!-- so luong sinh vien -->
                    <div class="form-group row">
                        <label for="example-number-input" class="col-form-label">Số lượng sinh viên</label>
                        <div>
                            <input class="form-control" type="number" value="42" name="so_luong_sv" required>
                        </div>
                    </div>
                    <!-- ma hoc phan -->
                    <div class="form-group row">
                        <label for="example-text-input" class="col-form-label">Mã học phần</label>
                        <div>
                            <input class="form-control" type="text" name="ma_HP" required>
                        </div>
                    </div>
                    <!-- khoa -->
                    <div class="form-group row">
                        <label for="example-text-input" class="col-form-label">Khoa</label>
                        <div>
                            <input class="form-control" type="text" name="khoa" required>
                        </div>
                    </div>
                    <!-- so tin chi -->
                    <div class="form-group row">
                        <label for="example-number-input" class="col-form-label">Số tín chỉ</label>
                        <div>
                            <input class="form-control" type="number" value="2" name="so_tin_chi" required>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row row2">
                <!-- phong -->
                <div class="form-group row">
                    <label for="example-text-input" class="col-form-label">Phòng</label>
                    <div>
                        <input class="form-control" type="text" name="phong" required>
                    </div>
                </div>
            </div>
            <div class="row row3">
                <!-- ghi chu -->
                <div class="form-group row">
                    <label class="col-form-label">Ghi chú</label>
                    <div>
                        <textarea class="form-control ghiChu" placeholder="Nhap ghi chu ... " name="ghi_chu"></textarea>
                    </div>
                </div>
            </div>
            <!-- submit - reset -->
            <div class="form-group">
                <div class="controls col-md-8 ">
                    <input type="submit" name="submit" value="Submit" class="btn btn-primary btn btn-info submit" />
                </div>
            </div>
            <br>
            <br>
            <br>

        </form>
    </div>
